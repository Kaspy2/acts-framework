<lccdd>
  <display>
    <vis name="EcalBarrelVis"       alpha="1.0" r="1.0"  g="1.0"  b="0.0"  showDaughters="true" visible="false"/>
    <vis name="EcalStaveVis"        alpha="1.0" r="0.0"  g="0.0"  b="1.0"  showDaughters="true" visible="false"/>
    <vis name="EcalLayerVis"        alpha="1.0" r="0.8"  g="0.8"  b="0.0"  showDaughters="true" visible="true"/>
    <vis name="EcalLayerVis2"        alpha="1.0" r="1.0"  g="0.0"  b="0.0"  showDaughters="true" visible="true"/>
  </display>

<detectors>
  <detector id="EcalBarrel_ID" name="EcalBarrel" type="ACTS_CaloBarrel" readout="EcalBarrelHits" vis="EcalBarrelVis" calorimeterType="EM_BARREL">
    <comment>Electromagnetic Calorimeter Barrel</comment>
    <dimensions numsides="(int) CaloSides" rmin="EcalBarrel_rmin" rmax="EcalBarrel_rmax" z="EcalBarrel_zmax*2"/>
    <staves vis="EcalStaveVis"/>
    <volume vis="EcalLayerVis" z_offset="0" dz="EcalBarrel_zmax*2" rmin="EcalBarrel_rmin1" rmax="EcalBarrel_rmax1" material="LiquidArgon"/>
    <volume vis="EcalLayerVis2" z_offset="0" dz="EcalBarrel_zmax*2" rmin="EcalBarrel_rmin2" rmax="EcalBarrel_rmax2" material="LiquidArgon"/>
    <volume vis="EcalLayerVis" z_offset="0" dz="EcalBarrel_zmax*2" rmin="EcalBarrel_rmin3" rmax="EcalBarrel_rmax3" material="LiquidArgon"/>
  </detector>
</detectors>
</lccdd>
