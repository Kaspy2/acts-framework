        <constant name="B0_L0_M0_C1_length"     value="20.65*mm"/>
        <constant name="B0_L0_M0_C1_thickness"  value="0.11*mm"/>
        <constant name="B0_L0_M0_C1_zpos"       value="-1.725*mm"/>
